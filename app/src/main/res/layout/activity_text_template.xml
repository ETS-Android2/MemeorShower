<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TextTemplate">


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="407dp"
            android:layout_height="644dp"
            android:id="@+id/text_list" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:itemCount="25" android:scrollbars="vertical"
            tools:listitem="@layout/recycler_view_item" app:layout_constraintHorizontal_bias="0.484"
            android:layout_marginTop="4dp"/>
    <Button
            android:text="Next"
            android:layout_width="379dp"
            android:layout_marginBottom="15dp"
            android:layout_height="52dp" android:id="@+id/NextToImageTemplateButton"
            app:layout_constraintTop_toBottomOf="@+id/text_list"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:backgroundTint="#C0E6EF" app:iconTint="#0B0A0A"
            android:textColor="#000000" android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>