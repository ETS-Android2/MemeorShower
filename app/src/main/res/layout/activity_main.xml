<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="new"
            android:layout_width="180dp"
            android:layout_height="80dp" android:id="@+id/NewButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="364dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:backgroundTint="#0090E4"/>
    <Button
            android:text="My Projects"
            android:layout_width="180dp"
            android:layout_height="80dp" android:id="@+id/MyProjectButton"
            app:layout_constraintTop_toBottomOf="@+id/NewButton"
            app:layout_constraintBottom_toTopOf="@+id/DatabaseButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:backgroundTint="#03669F"/>
    <Button
            android:text="Database"
            android:layout_width="180dp"
            android:layout_height="80dp" android:id="@+id/DatabaseButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="104dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:backgroundTint="#02446E"/>
    <ImageView
            android:layout_width="259dp"
            android:layout_height="274dp"
            app:srcCompat="@drawable/memeIcon" android:id="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@+id/NewButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>